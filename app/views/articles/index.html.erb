<h1 class="my-4">Publicações</h1>

<% @articles.each do |article| %>
  <div class="article mb-4 p-3 bg-white rounded shadow-sm">
    <h2><%= link_to article.title, article %></h2>
    <p><%= truncate(article.body, length: 100) %></p>
    <small>Publicado por: <%= article.user.email %> | <%= time_ago_in_words(article.created_at) %> atrás</small>
  </div>
<% end %>

<% if logged_in? %>
  <%= link_to 'Nova Publicação', new_article_path, class: 'btn btn-primary mt-4' %>
<% end %>

